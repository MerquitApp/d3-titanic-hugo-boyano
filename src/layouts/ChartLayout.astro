---
interface Props {
  title: string;
  className?: string;
}

const { title, className } = Astro.props;
---

<div class={`p-6 bg-secondary shadow-md rounded-lg w-full ${className ?? ""}`}>
  <header class="mb-4 flex items-center gap-14">
    <h1 class="font-bold text-2xl flex-1 text-nowrap">{title}</h1>
    <slot name="header" />
  </header>
  <hr class="border-[#E5E5EF] mb-9" />
  <slot />
</div>
