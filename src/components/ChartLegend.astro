---
interface Legend {
  name: string;
  color: string;
}

interface Props {
  legends: Legend[];
  className?: string;
}

const { legends, className } = Astro.props;
---

<div class={`flex justify-between mt-4 ${className}`}>
  {
    legends.map((legend) => (
      <div class="flex items-center mr-4">
        <span
          class="w-3 h-3 rounded-full inline-block mr-2"
          style={`background-color: ${legend.color}`}
        />
        <span class="opacity-50">{legend.name}</span>
      </div>
    ))
  }
</div>
