---
import Tabs from "../components/Tabs.astro";
import "../styles/global.css";

interface Props {
  activeTab: string;
}

const { activeTab } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>Dasnic</title>
  </head>
  <body class="bg-secondary font-inter">
    <header class="bg-secondary py-14 shadow">
      <div class="max-w-5xl w-[90%] mx-auto flex flex-col lg:flex-row lg:justify-between gap-16 lg:gap-36 items-center">
        <a href="/">
          <h1 class="text-6xl lg:text-5xl text-primary font-bold">Dasnic</h1>
        </a>
        <Tabs activeTab={activeTab} />
      </div>
    </header>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
